@model IEnumerable<imperiumCar2.Models.Transfers>
@{
    ViewData["Title"] = "Listo of Transfers";
}

<div class="row">
    <div class="col-md-12">
        <table class="table ">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Value)</th>
                    <th>@Html.DisplayNameFor(m => m.Vehicle)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transfers in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(mi => transfers.Value)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => transfers.Vehicle.LicensePlate)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@transfers.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@transfers.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white" asp-action="Edit" asp-route-id="@transfers.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="text-white mb-4" style="position: fixed; right:20px; bottom:45px;">
    <a asp_controller="@Model" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add new
    </a>
</div>