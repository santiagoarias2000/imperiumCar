@model imperiumCar2.Models.Transfers

@{
    ViewData["Title"] = "Delete Transfers";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Delete confirmation for @Model.ValueTrans</h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="ValueTrans" class="control-label"></label>
                        <input asp-for="ValueTrans" class="form-control" />
                        <span asp-validation-for="ValueTrans" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdVehicle" class="control-label"></label>
                        <input asp-for="IdVehicle" class="form-control" />
                        <span asp-validation-for="IdVehicle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-end"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}
