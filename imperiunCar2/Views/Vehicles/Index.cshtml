@model IEnumerable<imperiumCar2.Models.Vehicles>
@{
    ViewData["Title"] = "Listo of Vehicle";
}

<div class="row">
    <div class="col-md-12">
        <table class="table ">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Imagen)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.PriceBuy)</th>
                    <th>@Html.DisplayNameFor(m => m.PriceSale)</th>
                    <th>@Html.DisplayNameFor(m => m.ModelYear)</th>
                    <th>@Html.DisplayNameFor(m => m.LicensePlate)</th>
                    <th>@Html.DisplayNameFor(m => m.Sure)</th>
                    <th>@Html.DisplayNameFor(m => m.TechnicalMechanical)</th>
                    <th>@Html.DisplayNameFor(m => m.CarsBrands)</th>
                    <th>@Html.DisplayNameFor(m => m.Contract)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicles in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.Imagen)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.Description)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.PriceBuy)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.PriceSale)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.ModelYear)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.LicensePlate)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.Sure)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.TechnicalMechanical)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.CarsBrands.NameBrands)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => vehicles.Contract)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@vehicles.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@vehicles.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white" asp-action="Edit" asp-route-id="@vehicles.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="text-white mb-4" style="position: fixed; right:20px; bottom:45px;">
    <a asp_controller="@Model" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add new
    </a>
</div>