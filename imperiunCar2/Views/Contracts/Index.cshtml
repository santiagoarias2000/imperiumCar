@model IEnumerable<imperiumCar2.Models.Contracts>
@{
    ViewData["Title"] = "Listo of Contracts";
}

<div class="row">
    <div class="col-md-12">
        <table class="table ">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.SaleValue)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.IdPersons)</th>
                    <th>@Html.DisplayNameFor(m => m.IdVehicle)</th>
                    <th>@Html.DisplayNameFor(m => m.TypesContracts)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contracts in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(mi => contracts.SaleValue)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => contracts.Description)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => contracts.IdPersons)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => contracts.IdVehicle)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => contracts.TypesContracts)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@contracts.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@contracts.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@contracts.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="text-white mb-4" style="position: fixed; right:20px; bottom:45px;">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add new
    </a>
</div>