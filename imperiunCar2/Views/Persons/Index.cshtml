@model IEnumerable<imperiumCar2.Models.Persons>
@{
    ViewData["Title"] = "Listo of person";
}

<div class="row">
    <div class="col-md-12">
        <table class="table ">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Document)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.LastName)</th>
                    <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(m => m.TypePerson)</th>
                    <th>@Html.DisplayNameFor(m => m.Contract)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(mi => person.Document)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => person.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => person.LastName)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => person.PhoneNumber)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => person.TypePerson.TypePersonName)</td>
                        <td class="align-middle">@Html.DisplayFor(mi => person.Contract)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@person.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@person.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@person.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="text-white mb-4" style="position: fixed; right:20px; bottom:45px;">
    <a asp_controller="@Model" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add new
    </a>
</div>